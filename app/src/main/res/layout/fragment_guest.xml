<?xml version="1.0"?>

    <RelativeLayout android:padding="8dp" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:inputType="number" android:hint="Enter Plate Number" android:layout_marginTop="20dp" android:ems="10" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/editTextNum"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="225dp" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/sendGuest" tools:ignore="NotSibling" android:text="Submit" android:layout_marginRight="13dp" android:textSize="8pt" android:layout_alignParentRight="true" android:textColor="#ffffff" android:background="@color/colorPrimary" android:layout_marginVertical="143pt" android:layout_below="@id/editTextNum"/>


    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_below="@id/editTextNum">

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:inputType="textShortMessage" android:hint="Enter Name" android:layout_marginTop="20dp" android:ems="10" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/editTextGN" tools:ignore="DuplicateIds"/>


    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" tools:ignore="NotSibling" android:layout_below="@id/editTextGN">

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:inputType="textMultiLine" android:hint="Reason" android:layout_marginTop="40dp" android:ems="10" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/editTextGR" tools:ignore="DuplicateIds"/>


    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" tools:ignore="NotSibling" android:layout_below="@id/editTextGR">
        <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" tools:ignore="NotSibling" android:layout_below="@id/editTextGN">

            <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:inputType="textMultiLine" android:hint="Parking" android:layout_marginTop="40dp" android:ems="10" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/editTextP" tools:ignore="DuplicateIds"/>


            <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" tools:ignore="NotSibling" android:layout_below="@id/editTextP">


</RelativeLayout>

</RelativeLayout>

</RelativeLayout>

</RelativeLayout>

    </RelativeLayout>
</RelativeLayout>